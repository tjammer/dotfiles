exec_always --no-startup-id feh --bg-fill $HOME/.config/i3/wp.png
exec_always --no-startup-id xrandr -r 144
# for lock
exec_always --no-startup-id xset dpms 300
exec_always --no-startup-id xss-lock i3lock 
exec_always --no-startup-id sh $HOME/.config/i3/lightsOn.sh
exec_always --no-startup-id pulseaudio
exec_always --no-startup-id dropbox start
