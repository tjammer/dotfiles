[colors]
background = #051519
foreground = #ffffff
yellow = #FFCC66
dark-yellow = #FFCC66
black = #073642
white = #ffffff
red = #F2777A
green = #99CC99
blue = #6699CC
magenta = #CC99CC
cyan = #66CCCC

[bar/master]
width = 100%
height = 28
background = ${colors.background}
foreground = ${colors.foreground}
fixed-center = true

font-0 = "Overpass:pixelsize=10.5:antialias=true;2"
font-1 = "FontAwesome:size=9:antialias=true;2"
font-2 = "DejaVu Sans:size=10:antialias=true;3"

underline-size = 2
underline-color = ${colors.magenta}

[bar/top]
inherit = bar/master
modules-left = wm cmus
modules-center = datetime
modules-right = cpu ram temperature volume wireless-network battery menu0

padding = 1

module-margin = 1

tray-position = right
tray-transparent = false
tray-detached = false

[module/ovpn]
type = internal/network
interface = tun0
interval = 3.0
exec-if = pgrep openvpn

format-connected-padding = 1
format-disconnected-padding = 1

format-connected = <label-connected>

label-connected = 
label-connected-foreground = ${colors.cyan}

label-disconnected = 
label-disconnected-foreground = ${colors.red}

[module/volume]
type = internal/volume

;format-volume-padding = 1
format-volume = <label-volume>
format-volume-foreground = ${colors.foreground}
format-volume-prefix-foreground = ${colors.red}
format-volume-prefix = 
format-volume-prefix-padding = 1
label-volume = %percentage%%
format-muted-prefix =
format-muted-prefix-padding = 1
label-muted =0%
format-muted-foreground = ${colors.foreground}
format-muted-prefix-foreground = ${colors.red}
click-right = exec pavucontrol

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 

[module/temperature]
type = custom/script

exec = echo `sensors -A | grep -oP '^Core 0.+?  \+\K\d+' `°
interval = 5
format-prefix = "  "
format-suffix = "C"
format-foreground = ${colors.foreground}
format-prefix-foreground = ${colors.red}
format-prefix-padding = 1

[module/wireless-network]
type = internal/network
interface = wlp3s0
interval = 3.0
ping-interval = 10

format-connected = <label-connected>
label-connected = %essid%
label-disconnected = ""
format-disconnected-foreground = ${colors.red}
format-connected-prefix = ""
format-connected-prefix-padding = 1
format-connected-prefix-foreground = ${colors.red}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 

animation-packetloss-0 = 
animation-packetloss-0-foreground = #e8e8e8a64c
animation-packetloss-1 = 
animation-packetloss-1-foreground = ${bar/top.foreground}
animation-packetloss-framerate = 500

[module/wired-network]
type = internal/network
interface = enp3s0
