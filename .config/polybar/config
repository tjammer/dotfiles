[module/wm]
type = internal/bspwm
pin-workspaces = true
inline-mode = false
enable-click = true
enable-scroll = true
reverse-scroll = true
fuzzy-match = true
ws-icon-default = "  "
format = <label-state> <label-mode>
padding = 1
label-monitor = %name%
label-dimmed-foreground = #555
label-dimmed-focused-background = #f00
label-focused = "  "
label-focused-foreground = ${colors.red}
label-occupied = %icon%
label-urgent = %icon%
label-urgent-foreground = #000000
label-urgent-background = ${colors.red}
label-empty = %icon%
label-empty-foreground = #55


[module/datetime]
type = internal/date
interval = 1.0
date = %a %b %d, %H:%M
format = <label>
format-prefix = 
label = %date%
format-foreground = ${colors.foreground}
format-prefix-foreground = ${colors.red}
format-prefix-padding = 1

[module/menu0]
type = custom/menu

format = <label-toggle> <menu>
;format-padding = 2
;format-foreground = ${colors.magenta}

menu-0-0 =  shutdown
menu-0-0-exec = systemctl poweroff
menu-0-1 =  restart
menu-0-1-exec = systemctl reboot
menu-0-2 =  logout
menu-0-2-exec = mate-session-save --logout
menu-0-3 =  cancel

label-open =  
label-close =

[module/battery]
type=internal/battery

full-at = 99

battery = BAT0
adapter = AC

poll-interval = 5

; see "man date" for details on how to format the time string
; NOTE: if you want to use syntax tags here you need to use %%{...}
; Default: %H:%M:%S
time-format = %H:%M

format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colors.red}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-foreground = ${colors.red}

;format-full = <ramp-capacity> <label-full>
format-full-foreground = ${colors.red}

label-charging = %percentage%%
label-charging-foreground = ${colors.foreground}

label-discharging = %percentage%% %time%
label-discharging-foreground = ${colors.foreground}

; Available tokens:
;   %percentage% (default)
label-full = 

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

[module/cmus]
type = custom/script

exec = bash ~/.config/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 1
format-prefix = 
format-prefix-foreground = ${colors.red}
format-prefix-padding = 1

click-left = cmus-remote --pause
click-right = cmus-remote --stop
